/* studentRepresentChange.wxss */
page{
  height:100%;
}
.btn_enroll{
  align-items: center;
  position: relative;
  top: 30rpx;
  font-size: 14pt;
  line-height: 80rpx;
  height: 80rpx;
  width:60%;
  text-align: center;
  border-radius: 10px;
  margin: 30rpx 20% 30rpx;
  background-color: #4fc3f7;
  color: white;
  font-family: "黑体";
}
.class-leftimage{
  display: flex;
  flex-direction: row;
  font-size: 15pt;
    padding: 0 20rpx;
    margin-left:20rpx;
    margin-right:20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 15px;
}

.info-head{
  display: flex;
  align-items: center;
  height: 75rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
  padding-left: 30rpx; 
  color: #666;
  line-height: 160%;
  font-family: "黑体";
}
.card-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.info-name{
  letter-spacing: 2px;
    font-size: 15pt;
}
.card-body{
  padding: 20rpx 25rpx 30rpx 0;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.out-view{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: -200;
    height: 100%;
    padding-left: 10rpx;
    padding-right: 10rpx;
    background-color: #f7f7f7;
}

.info-list {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    padding-left: 15rpx;
}
.out-view{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.info-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
}
.info-text{
    text-shadow: 1rpx 1rpx grey;
    font:30px arial,sans-serif;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-left: 150rpx;
}
.info-header-title{
    font-size: 20pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}

.info-img{
    display: block;
    width: 200rpx;
    height: 200rpx;
    opacity: 0.6;
    margin-right: 30rpx;
    border-radius: 15px;
}
.info-content{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
    border-radius: 5px;
    background: #fff;
    margin-bottom: 50rpx;
    margin:0% 5%;
    width:90%;
}


.reporter-detail-item{
    display: flex;
    align-items: center;
    height: 88rpx;
    padding-left: 30rpx;
}
.reporter-user .reporter-detail-input{
    color: #999;
}
.reporter-detail-input{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    padding-left: 45rpx;
    font-size: 14pt;
}
.reporter-detail-name{
    font-size: 14pt;
    font-family: "黑体";
    text-align: left;
    padding-top: 20rpx;
    padding-left: 20rpx;
}
.reporter-detail{
    display: flex;
    flex-direction: row;
    background-color: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-top: 25rpx;
    overflow: hidden;
    height: 90rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-radius: 10px;
}
.reporter-detail-input input{
    font-size: 14pt;
    width: 100%;
    padding-top: 13rpx;
    padding-left: 20rpx;
}
