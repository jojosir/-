page{
  height:100%;
  background-color: #f7f7f7;
}
.out-view{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.info-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
}
.info-text{
    text-shadow: 1rpx 1rpx grey;
    font:30px arial,sans-serif;
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-left: 150rpx;
}
.info-header-title{
    font-size: 20pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}

.info-img{
    display: block;
    width: 200rpx;
    height: 200rpx;
    opacity: 0.6;
    margin-right: 30rpx;
    border-radius: 15px;
}
.class-content{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
    flex-direction: column;
}
.class-item {
    display: flex;
    flex-direction: column;
    font-size: 15pt;
    padding: 0 40rpx;
    margin-left:20rpx;
    margin-right:20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 15px;
}
.tag {
    display: flex;
   flex-direction:  row

}

.item-label {
  display: inline-block;
  font-size: 12px;
  height: 28px;
  line-height: 28px;
  color: #333;
  border: 1rpx solid #999;
  padding: 10px 10px;
  border-radius: 2px;
  margin-right: 10px;
  box-sizing: border-box;
  vertical-align: middle;
}
.item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 145rpx;
    font-size: 16pt;
}
.item-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    padding-right: 30rpx;
}
.item-name {
    font-size: 12pt;
    line-height: 225%;
    letter-spacing: 1px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-family: "黑体";
}
.item-other {
    font-size: 10pt;
    line-height: 100%;
    color: #aaa;
    font-family: "黑体";
}
.item-icon{
    flex-shrink: 0;
    width: 30rpx;
    height: 30rpx;
}
.item-label-primary {
  color: #fff;
  background: #4fc3f7;
  border: 1rpx solid #4fc3f7;
}
.item-label-small {
  font-size: 11px;
  height: 16px;
  line-height: 16px;
  padding: 0px 3px;
}
.btn_enroll{
  align-items: center;
  position: relative;
  top: 30rpx;
  font-size: 14pt;
  line-height: 80rpx;
  height: 80rpx;
  width:60%;
  text-align: center;
  border-radius: 10px;
  margin: 30rpx 20% 30rpx;
  background-color: #4fc3f7;
  color: white;
  font-family: "黑体";
}
.class-leftimage{
  display: flex;
  flex-direction: row;
  font-size: 15pt;
    padding: 0 20rpx;
    margin-left:20rpx;
    margin-right:20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 15px;
}
.item-img{
  display: block;
    width: 60rpx;
    height: 60rpx;
    opacity: 0.6;
    margin-right: 5rpx;
    border-radius: 5px;
}