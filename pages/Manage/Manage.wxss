/* pages/Manage/Manage.wxss */
.out-view{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color:#f7f7f7;
    background-repeat: no-repeat;
    background-size: 100% auto; 
}
.background {
  position: absolute;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: 0;
  opacity: 1;
}

.main-title {
    flex: 1;
    margin: 10rpx 0 10rpx 25rpx;
}
.title-text {
    color: #999;
    font-family: "黑体";
    font-size: 11pt; 
}

.main-list {

    display: flex;
    flex: 1;
    flex-flow: column nowrap;
    align-items: stretch;
}
.list-item {
    display: flex;
    margin-bottom: 5rpx;
    padding: 0 20rpx;
    flex-flow: column nowrap;
    align-items: stretch;
    /*background-color: #f5f5f5;*/
    font-size: 11pt;
}
.item {
    display: flex;
    flex: 1;
    padding: 10rpx;
    padding-right: 0;
    align-items: center;
}
.item-content {
    flex: 1;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    background-color: white;
    border-radius: 20rpx;
    height: 160rpx;
}
.item-content-image {
    display: flex;
    width: 100rpx;
    height: 100rpx;
    border-radius: 25rpx;
}
.item-content-state {
    margin-left: 20rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-content: flex-start;
    font-family: "黑体";
    font-size: 12pt;
    line-height: 175%;
    letter-spacing: 1px;
}
