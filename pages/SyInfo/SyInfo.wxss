.info-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
    font-family: "黑体";
}
.info-img{
    display: block;
    width: 200rpx;
    height: 200rpx;
    padding-left: 50rpx;
    opacity: .3;
}
.info-header-title{
    font-family: "宋体";
    font-size: 25pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}
.info-text{
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-right: 25rpx;
}
.inform{
   padding: 50rpx 0;
}
.inform-title{
  font-family: "宋体";
  font-size: 14pt;
  color: #222;
}
.class-content{
    display: flex;
    flex-flow: column nowrap;
    align-items: stretch;
}
.class-item {
    display: flex;
    flex-direction: column;
    font-size: 11pt;
    padding: 0 40rpx;
    margin-left:20rpx;
    margin-right:20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 5px;
}

