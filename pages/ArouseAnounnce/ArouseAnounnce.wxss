.out_view{
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
}
.header{
  padding: 30rpx 0;
  background-color: greenyellow;
}
.info-header{
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
    font-family: "黑体";
}
.info-img{
    display: block;
    width: 200rpx;
    height: 200rpx;
    padding-left: 50rpx;
    opacity: .3;
}
.info-header-title{
    font-family: "宋体";
    font-size: 25pt;
    font-weight: bold;
    line-height: 150%;
    margin-bottom: 15rpx;
    color: #222;
}
.info-text{
    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-start;
    padding-right: 25rpx;
}
.btn
{
  top: 25rpx;
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  width:100%;
  text-align: center;
  border-radius: 5px;
  margin: 15rpx 0 15rpx;
  background-color: #e84e40;
  color: white;
  font-family: "黑体";
  
  bottom: 0;
}

.text{
  margin: 15rpx 0 15rpx;
  height: 650rpx
}
.reporter-detail-input{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-right: 30rpx;
    padding-left: 45rpx;
}
.reporter-detail-name{
    font-size: 12pt;
    font-family: "黑体";
    text-align: left;

    padding-top: 20rpx;
}
.reporter-detail{
    display: flex;
    flex-direction: row;
    background-color: #fff;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
    margin-top: 25rpx;
    overflow: hidden;
    height: 80rpx
}
