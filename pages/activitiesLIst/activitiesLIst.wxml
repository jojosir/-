<!--pages/activitiesLIst/activitiesLIst.wxml-->
<view class="out-view">
  <view class="info-header">
    <view class="info-text">
        <text class="info-header-title">活动列表</text>
    </view>
    <image class="info-img" src="/img/act_list2.png"></image>
  </view>
  <view class="class-content" wx:key="{{index}}" data-index="{{index}}" wx:for="{{activities}}">
    <view class = "class-leftimage" data-index="{{index}}" bindtap="activitiyClick">
      <image class="item-img" src="/img/act_list1.png"></image>
      <view class="class-item" >
        <view class="item" data-index="{{index}}">
          {{item.activity_name}}
        </view>
        <view class='tag'>
          <view class="item-label item-label-primary item-label-small">
                {{item.location}}
          </view>
          <view class="item-label item-label-primary item-label-small">
                {{item.place}}
          </view>
        </view>
      </view>
    </view> 
  </view>
  <button class="btn_enroll" bindtap="returnmap" >返回地图</button>
</view>
